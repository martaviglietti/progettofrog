typedef struct{
    int id;
    int y;
    int dir;
    int speed;
}Flusso;

//controllo modifica SINCRONIZZA
Flusso flussi[8];
srand(time(NULL));
int altezza_base;
int dist_flussi;
for(int i=0;i<8;i++){
    flussi[i].y=altezza_base - i*dist_flussi;
    flussi[i].speed= VELMIN + rand()%(VELMAX - VELMIN +1);
    if(i>=1){
        flussi[i].dir= -flussi[i-1].dir;
        continue;
    }
    flussi[i].dir= rand()%2;
    if(flussi[i].dir==0) flussi[i].dir=1; else flussi[i].dir=-1;
    
}



